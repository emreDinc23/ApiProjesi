@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personel Adı</th>
        <th>Personel Ünvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr> 
            <td>@x.StaffID</td>
            <td>@x.Name</td>
            <td>@x.Title</td>
            <td><a href="/Staff/DeleteStaff/@x.StaffID" class="btn mb-1 btn-rounded btn-outline-danger"> Sil</a></td>
            <td><a href="/Staff/UpdateStaff/@x.StaffID" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
            <td><a class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</a></td>
        </tr>
       
    }
   
</table>
<a href="/Staff/AddStaff" class="btn mb-1 btn-rounded btn-outline-primary">Yeni Personel Girişi</a>

